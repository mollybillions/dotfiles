[core]
	commitGraph = true
	pager = diff-so-fancy | less --tabs=4 -RFX
	editor = emacsclient -create-frame --alternate-editor=""
[diff]
	algorithm = patience
[gc]
	writeCommitGraph = true
[protocol]
	version = 2
[url "https://github.com/Shopify/"]
	insteadOf = git@github.com:Shopify/
	insteadOf = git@github.com:shopify/
	insteadOf = ssh://git@github.com/Shopify/
	insteadOf = ssh://git@github.com/shopify/
[user]
	name = Molly Brasington
	email = molly.brasington@shopify.com
[color]
	ui = true
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = 11
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
[diff-so-fancy]
	markEmptyLines = false
[alias]
	s = status
	d = diff
	co = checkout
	br = branch
	last = log -1 HEAD
	back = checkout @{-1}
	unstage = reset HEAD --
	cane = commit --amend --no-edit
	lo = log --oneline -n 22
	pr = pull --rebase
	files = diff --name-only master
	update = !git-update-branch
	remaster = rebase origin/master
	wut = for-each-ref --sort='authordate:iso8601' --format=' %(color:green)%(authordate:relative)%09%(color:white)%(refname:short)' refs/heads
